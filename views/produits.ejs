<%- include('header'); -%>
<div class="container">
        
    <h1>Produits :</h1>
   


    <table class="table table-striped table-dark">
        <thead>
            <tr class="table100-head">  
                <th class="column">ID</th>  
                <th class="column">Nom du produit</th>  
                <th class="column">Quantit√©</th>  
                <th class="column">Prix (DH)</th>  
                <th class="column">Nom du fournisseur</th>  
                <th class="column">Categorie</th>  
                <th style="width: 50px;" class="column"></th>  
                <th style="width: 80px;" class="column"></th>  



            </tr>  
        </thead>
        <tbody>  
            <% produits.forEach(function (prod) { %>
               <tr>  
                   <td class="column"><%= prod.id %> </td>  
                   <td class="column"><%= prod.nom %></td>  
                   <td class="column"><%= prod.quantite %>
                    <a href="/deletequantite/<%= prod.id %>" class="btn btn-sm btn-danger">-</a></td>
                   <td class="column"><%= prod.prix %></td>
                   <td class="column"><%= prod.nomfour %></td>
                   <td class="column"><%= prod.categorie %></td>
                   <td><a href="/delete/<%= prod.id %>" class="btn btn-sm btn-danger">Delete</a>
                   </td>
                   <td><a href="/updateproduct/<%= prod.id %> " class="btn btn-sm btn-success"> UPDATE</a> </td>

               </tr>
                                                  
            <% }) %>
            </tbody>
    </table>
        
       <div class="link">
        <a href="/addprod" class="add">/Add Produits</a>
        <a href="/fournisseur" class="add">/La liste des fournisseurs</a>
        <a href="/rayon" class="add">/La liste des rayons</a>
    </div>

    </div>



        


</body>

</html>